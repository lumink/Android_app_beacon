<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SearchFriend_Activity.search">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="친구의 ID를 검색해주세요"
        android:id="@+id/txtView"
        android:textColor="@color/color8"
        android:gravity="center_horizontal"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/txtView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:id="@+id/SearchBtn"
        android:layout_alignBaseline="@+id/DelFriendBtn"
        android:layout_alignBottom="@+id/DelFriendBtn"
        android:layout_toStartOf="@+id/DelFriendBtn"
        android:background="@color/color5"
        android:layout_marginEnd="30dp" />

    <Button
        android:id="@+id/DelFriendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Friend"
        android:layout_marginEnd="60dp"
        android:background="@color/color5"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
