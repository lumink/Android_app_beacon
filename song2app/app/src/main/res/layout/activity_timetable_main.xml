<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context="Login_Activity.MainActivity"
    android:background="@color/white"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/timeTableLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plus1"
                android:id="@+id/lecturePlus"
                android:onClick="onClick"
                android:layout_marginLeft="50px"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:id="@+id/lectureReset"
                android:layout_gravity="center"
                android:background="@drawable/delete"
                android:onClick="onClick"
                android:layout_marginRight="175dp"
                android:layout_weight="0.01" />

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/lecturesettig"
                android:layout_gravity="center"
                android:background="@drawable/alarm1"
                android:onClick="onClick"
                android:layout_marginRight="20dp"
                android:layout_weight="0.01" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>